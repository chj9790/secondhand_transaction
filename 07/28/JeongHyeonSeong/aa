create sequence comment_seq start with 1 increment by 1 nocache nocycle;

CREATE SEQUENCE product_comment_seq START WITH 1 INCREMENT BY 1;

CREATE SEQUENCE product_comment_seq
    START WITH 1
    INCREMENT BY 1
    NOCACHE
    NOCYCLE;

CREATE OR REPLACE TRIGGER trg_product_comment_id
BEFORE INSERT ON product_comment
FOR EACH ROW
BEGIN
    IF :new.comment_id IS NULL THEN
        SELECT product_comment_seq.nextval INTO :new.comment_id FROM dual;
    END IF;
END;
/
